<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{YYYY-MM-dd HH:mm:ss.SSS} %-20([%thread]) %highlight(%-7([%level])) %-36logger{36}: %msg%n</pattern>
        </encoder>
    </appender>

    <if condition='property("normativecontrol.profile").contains("dev")'>
        <!--dev config-->
        <then>
            <root level="debug">
                <appender-ref ref="STDOUT"/>
            </root>
            <logger name="org.eclipse.jetty" level="INFO"/>
            <logger name="io.netty" level="INFO"/>
            <logger name="org.docx4j" level="ERROR"/>
            <logger name="software.amazon.awssdk" level="WARN"/>
        </then>
    </if>
    <if condition='property("normativecontrol.profile").contains("production") || property("normativecontrol.profile").contains("standalone")'>
        <!--production config-->
        <then>
            <root level="info">
                <appender-ref ref="STDOUT"/>
            </root>
        </then>
    </if>


</configuration>